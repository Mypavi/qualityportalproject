<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog id="inspectionDetailsDialog" 
            title="Inspection Lot Details" 
            contentWidth="600px"
            resizable="true"
            draggable="true">
        <content>
            <f:SimpleForm editable="false" 
                         layout="ResponsiveGridLayout"
                         labelSpanXL="4" 
                         labelSpanL="4" 
                         labelSpanM="4" 
                         labelSpanS="12"
                         adjustLabelSpan="false"
                         emptySpanXL="0" 
                         emptySpanL="0" 
                         emptySpanM="0" 
                         emptySpanS="0"
                         columnsXL="2" 
                         columnsL="2" 
                         columnsM="1"
                         singleContainerFullSize="false">
                <f:content>
                    <Label text="Lot Number:" />
                    <Text text="{InspectionLotNumber}" />
                    
                    <Label text="Plant:" />
                    <Text text="{Plant} - {PlantDescription}" />
                    
                    <Label text="Material:" />
                    <Text text="{SelectedMaterial}" />
                    
                    <Label text="Lot Origin:" />
                    <Text text="{LotOrigin}" />
                    
                    <Label text="Actual Quantity:" />
                    <Text text="{ActualQuantity} {UnitOfMeasure}" />
                    
                    <Label text="Inspected Quantity:" />
                    <Text text="{InspectedQuantity} {UnitOfMeasure}" />
                    
                    <Label text="Usage Decision Code:" />
                    <Text text="{UsageDecisionCode}" />
                    
                    <Label text="Status:" />
                    <ObjectStatus text="{UsageDecisionStatus}" 
                                 state="{path: 'UsageDecisionStatus', formatter: '.formatStatus'}" />
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="View Results" 
                    type="Emphasized" 
                    press="onViewResults" 
                    visible="{path: 'UsageDecisionStatus', formatter: '.isDecisionMade'}" />
            <Button text="View Usage Decision" 
                    press="onViewUsageDecision" 
                    visible="{path: 'UsageDecisionStatus', formatter: '.isDecisionMade'}" />
            <Button text="Close" press="onCloseDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
<mvc:View controllerName="qualityportal.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    
    <Page id="loginPage" class="loginPage">
        <content>
            <!-- Background Container -->
            <VBox class="loginBackground" height="100vh" alignItems="Center" justifyContent="Center">
                
                <!-- Main Login Container -->
                <VBox class="loginContainer" alignItems="Center">
                    
                    <!-- Header Section -->
                    <VBox class="loginHeader" alignItems="Center">
                        <core:Icon src="sap-icon://quality-issue" size="4rem" color="#0070f3" class="loginIcon" />
                        <Title text="{i18n>appTitle}" level="H1" class="loginTitle" />
                        <Text text="Quality Management System" class="loginSubtitle" />
                    </VBox>
                    
                    <!-- Login Card -->
                    <Panel class="loginPanel" width="420px">
                        <content>
                            <VBox class="loginForm">
                                
                                <!-- Welcome Message -->
                                <VBox class="welcomeSection" alignItems="Center">
                                    <Title text="Welcome Back" level="H2" class="welcomeTitle" />
                                    <Text text="Please sign in to your account" class="welcomeText" />
                                </VBox>
                                
                                <!-- Login Form -->
                                <VBox class="formSection">
                                    <VBox class="inputGroup">
                                        <Label text="{i18n>userIdLabel}" class="inputLabel" />
                                        <Input id="userIdInput" 
                                               value="{/bname}" 
                                               placeholder="Enter your User ID"
                                               class="loginInput"
                                               required="true"
                                               submit="onLogin" />
                                    </VBox>
                                    
                                    <VBox class="inputGroup">
                                        <Label text="{i18n>passwordLabel}" class="inputLabel" />
                                        <Input id="passwordInput" 
                                               type="Password"
                                               value="{/password}" 
                                               placeholder="Enter your Password"
                                               class="loginInput"
                                               required="true"
                                               submit="onLogin" />
                                    </VBox>
                                </VBox>
                                
                                <!-- Login Button -->
                                <VBox class="buttonSection">
                                    <Button id="loginButton" 
                                            text="{i18n>loginButton}" 
                                            type="Emphasized" 
                                            press="onLogin"
                                            width="100%"
                                            class="loginButton" />
                                </VBox>
                                
                                <!-- Message Strip -->
                                <MessageStrip id="messageStrip" 
                                              visible="false" 
                                              class="messageStrip" />
                                
                                <!-- Demo Credentials -->
                                <VBox class="demoSection" alignItems="Center">
                                    <Text text="Demo Credentials:" class="demoLabel" />
                                    <Text text="User ID: K901900 | Password: 12345" class="demoCredentials" />
                                    <Text text="Click Login to see the Quality Management Dashboard" class="demoHint" />
                                </VBox>
                                
                            </VBox>
                        </content>
                    </Panel>
                    
                    <!-- Footer -->
                    <VBox class="loginFooter" alignItems="Center">
                        <Text text="Â© 2025 SAP Quality Management Portal" class="footerText" />
                        <Text text="Powered by SAP UI5 &amp; Fiori Design" class="footerSubtext" />
                    </VBox>
                    
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
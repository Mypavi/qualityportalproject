<mvc:View controllerName="qualityportal.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    
    <Page id="loginPage" class="loginPage">
        <content>
            <!-- Background Container -->
            <VBox class="loginBackground" height="100vh" alignItems="Center" justifyContent="Center">
                
                <!-- Main Login Container -->
                <VBox class="loginContainer" alignItems="Center">
                    
                    <!-- KAAR TECH Header Section -->
                    <VBox class="loginHeader" alignItems="Center">
                        <VBox class="companyLogo" alignItems="Center">
                            <core:Icon src="sap-icon://building" size="5rem" color="#ffffff" class="logoIcon" />
                            <Title text="KAAR TECH" level="H1" class="companyName" />
                            <Text text="TECHNOLOGIES PVT LTD" class="companySubtitle" />
                        </VBox>
                        <VBox class="systemInfo" alignItems="Center">
                            <Title text="Quality Management Portal" level="H2" class="systemTitle" />
                            <Text text="Enterprise Quality Control System" class="systemSubtitle" />
                        </VBox>
                    </VBox>
                    
                    <!-- Login Card -->
                    <Panel class="loginPanel" width="420px">
                        <content>
                            <VBox class="loginForm">
                                
                                <!-- Welcome Message -->
                                <VBox class="welcomeSection" alignItems="Center">
                                    <core:Icon src="sap-icon://employee" size="3rem" color="#1a73e8" class="welcomeIcon" />
                                    <Title text="Employee Login" level="H2" class="welcomeTitle" />
                                    <Text text="Access KAAR TECH Quality Management System" class="welcomeText" />
                                </VBox>
                                
                                <!-- Login Form -->
                                <VBox class="formSection">
                                    <VBox class="inputGroup">
                                        <Label text="{i18n>userIdLabel}" class="inputLabel" />
                                        <Input id="userIdInput" 
                                               value="{/bname}" 
                                               placeholder="Enter your User ID"
                                               class="loginInput"
                                               required="true"
                                               submit="onLogin" />
                                    </VBox>
                                    
                                    <VBox class="inputGroup">
                                        <Label text="{i18n>passwordLabel}" class="inputLabel" />
                                        <Input id="passwordInput" 
                                               type="Password"
                                               value="{/password}" 
                                               placeholder="Enter your Password"
                                               class="loginInput"
                                               required="true"
                                               submit="onLogin" />
                                    </VBox>
                                </VBox>
                                
                                <!-- Login Button -->
                                <VBox class="buttonSection">
                                    <Button id="loginButton" 
                                            text="{i18n>loginButton}" 
                                            type="Emphasized" 
                                            press="onLogin"
                                            width="100%"
                                            class="loginButton" />
                                </VBox>
                                
                                <!-- Message Strip -->
                                <MessageStrip id="messageStrip" 
                                              visible="false" 
                                              class="messageStrip" />
                                
                                <!-- Security Notice -->
                                <VBox class="securitySection" alignItems="Center">
                                    <HBox alignItems="Center" class="securityNotice">
                                        <core:Icon src="sap-icon://shield" size="1rem" color="#28a745" class="securityIcon" />
                                        <Text text="Secure Login - All sessions are encrypted" class="securityText" />
                                    </HBox>
                                </VBox>
                                
                            </VBox>
                        </content>
                    </Panel>
                    
                    <!-- KAAR TECH Footer -->
                    <VBox class="loginFooter" alignItems="Center">
                        <Text text="Â© 2025 KAAR TECH TECHNOLOGIES PVT LTD" class="footerText" />
                        <Text text="Powered by SAP UI5 Enterprise Platform" class="footerSubtext" />
                        <HBox class="contactInfo" alignItems="Center">
                            <core:Icon src="sap-icon://phone" size="0.8rem" color="rgba(255,255,255,0.7)" />
                            <Text text="+91-XXX-XXX-XXXX" class="contactText" />
                            <Text text="|" class="separator" />
                            <core:Icon src="sap-icon://email" size="0.8rem" color="rgba(255,255,255,0.7)" />
                            <Text text="support@kaartech.com" class="contactText" />
                        </HBox>
                    </VBox>
                    
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
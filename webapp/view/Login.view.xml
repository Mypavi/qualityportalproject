<mvc:View controllerName="qualityportal.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    
    <Page id="loginPage" class="loginPage">
        <content>
            <!-- Background Container -->
            <VBox class="loginBackground" height="100vh" alignItems="Center" justifyContent="Center">
                
                <!-- Main Login Container -->
                <VBox class="loginContainer" alignItems="Center">
                    
                    <!-- KAAR TECH Header Section -->
                    <VBox class="loginHeader" alignItems="Center">
                        <VBox class="companyLogo" alignItems="Center">
                            <HBox alignItems="Center" class="logoContainer">
                                <core:Icon src="sap-icon://building" size="4rem" class="logoIcon" />
                                <VBox class="brandingText">
                                    <Title text="KAAR TECH" level="H1" class="companyName" />
                                    <Text text="TECHNOLOGIES PVT LTD" class="companySubtitle" />
                                </VBox>
                            </HBox>
                        </VBox>
                        <VBox class="systemInfo" alignItems="Center">
                            <Title text="Quality Management Portal" level="H2" class="systemTitle" />
                            <Text text="Enterprise Quality Control and Inspection System" class="systemSubtitle" />
                            <HBox alignItems="Center" class="versionInfo">
                                <core:Icon src="sap-icon://quality-issue" size="1rem" class="versionIcon" />
                                <Text text="Version 2.0 - SAP Integrated" class="versionText" />
                            </HBox>
                        </VBox>
                    </VBox>
                    
                    <!-- Login Card -->
                    <Panel class="loginPanel" width="420px">
                        <content>
                            <VBox class="loginForm">
                                
                                <!-- Welcome Message -->
                                <VBox class="welcomeSection" alignItems="Center">
                                    <HBox alignItems="Center" class="welcomeHeader">
                                        <core:Icon src="sap-icon://employee" size="2.5rem" class="welcomeIcon" />
                                        <VBox class="welcomeContent">
                                            <Title text="Employee Access" level="H2" class="welcomeTitle" />
                                            <Text text="Quality Management System" class="welcomeText" />
                                        </VBox>
                                    </HBox>
                                    <Text text="Please enter your SAP credentials to access the system" class="loginInstructions" />
                                </VBox>
                                
                                <!-- Login Form -->
                                <VBox class="formSection">
                                    <VBox class="inputGroup">
                                        <HBox alignItems="Center" class="labelContainer">
                                            <core:Icon src="sap-icon://person-placeholder" size="1rem" class="inputIcon" />
                                            <Label text="SAP User ID" class="inputLabel" />
                                        </HBox>
                                        <Input id="userIdInput" 
                                               value="{/bname}" 
                                               placeholder="Enter your SAP User ID"
                                               class="loginInput"
                                               required="true"
                                               submit="onLogin" />
                                    </VBox>
                                    
                                    <VBox class="inputGroup">
                                        <HBox alignItems="Center" class="labelContainer">
                                            <core:Icon src="sap-icon://locked" size="1rem" class="inputIcon" />
                                            <Label text="Password" class="inputLabel" />
                                        </HBox>
                                        <Input id="passwordInput" 
                                               type="Password"
                                               value="{/password}" 
                                               placeholder="Enter your SAP Password"
                                               class="loginInput"
                                               required="true"
                                               submit="onLogin" />
                                    </VBox>
                                    
                                    <!-- Login Options -->
                                    <HBox justifyContent="SpaceBetween" alignItems="Center" class="loginOptions">
                                        <CheckBox text="Remember User ID" class="rememberCheckbox" />
                                        <Link text="Forgot Password?" class="forgotLink" />
                                    </HBox>
                                </VBox>
                                
                                <!-- Login Button -->
                                <VBox class="buttonSection">
                                    <Button id="loginButton" 
                                            text="Sign In to Quality Portal" 
                                            type="Emphasized" 
                                            press="onLogin"
                                            width="100%"
                                            icon="sap-icon://log"
                                            class="loginButton" />
                                    <Text text="By signing in, you agree to KAAR TECH security policies" class="agreementText" />
                                </VBox>
                                
                                <!-- Message Strip -->
                                <MessageStrip id="messageStrip" 
                                              visible="false" 
                                              class="messageStrip" />
                                
                                <!-- Security Notice -->
                                <VBox class="securitySection" alignItems="Center">
                                    <HBox alignItems="Center" class="securityNotice">
                                        <core:Icon src="sap-icon://shield" size="1rem" class="securityIcon" />
                                        <Text text="256-bit SSL Encrypted - SOX Compliant" class="securityText" />
                                    </HBox>
                                    <HBox alignItems="Center" class="systemStatus">
                                        <core:Icon src="sap-icon://status-positive" size="0.8rem" class="statusIcon" />
                                        <Text text="All systems operational" class="statusText" />
                                    </HBox>
                                </VBox>
                                
                            </VBox>
                        </content>
                    </Panel>
                    
                    <!-- KAAR TECH Footer -->
                    <VBox class="loginFooter" alignItems="Center">
                        <Text text="Copyright 2025 KAAR TECH TECHNOLOGIES PVT LTD" class="footerText" />
                        <Text text="Powered by SAP UI5 Enterprise Platform" class="footerSubtext" />
                        <HBox class="contactInfo" alignItems="Center">
                            <core:Icon src="sap-icon://phone" size="0.8rem" class="contactIcon" />
                            <Text text="+91-XXX-XXX-XXXX" class="contactText" />
                            <Text text="â€¢" class="separator" />
                            <core:Icon src="sap-icon://email" size="0.8rem" class="contactIcon" />
                            <Text text="support@kaartech.com" class="contactText" />
                        </HBox>
                    </VBox>
                    
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>